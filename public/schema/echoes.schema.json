{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "properties": {
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "slug": { "type": "string" },
          "cost": { "type": "integer" },
          "name": { "type": "string" },
          "nameLocalized": { "type": "object" },
          "class": {
            "type": "string",
            "enum": ["Common", "Elite", "Overlord", "Calamity"]
          },
          "attribute": {
            "type": "string",
            "enum": ["Aero", "Fusion", "Glacio", "Electro", "Spectro", "Havoc"]
          },
          "sonataEffects": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "Lingering Tunes",
                "Rejuvenating Glow",
                "Sierra Gale",
                "Celestial Light",
                "Void Thunder",
                "Freezing Frost",
                "Molten Rift",
                "Moonlit Clouds",
                "Sun-sinking Eclipse"
              ]
            }
          },
          "hidden": {
            "type": "boolean"
          },
          "publishedTime": {
            "type": "string"
          },
          "modifiedTime": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "slug",
          "cost",
          "name",
          "class",
          "attribute",
          "publishedTime",
          "modifiedTime"
        ]
      }
    }
  },
  "required": ["items"],
  "title": "Echos",
  "type": "object"
}
